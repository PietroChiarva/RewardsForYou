@model IEnumerable<RewardsForYou.Models.Rewards>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
            
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Points)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Availability)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Availability)
                </td>
                <td>
                    <a onclick="ShowDeleteModal( '@item.Description')"
                       class="btn btn-primary"><i class="fa fa-trash"></i> Delete</a>
                </td>
            </tr>
}

                </table>
       
   

   

    <script>
        
        function ShowDeleteModal(Description) {
            $('#showModal .modal-body').load(Router.action('Amministrator', '_PartialDeleteRewards', { Description: Description }));
            $('#showModal').modal("show");
        }
    </script>
