@using (Html.BeginForm("DoAddTaskJson", "ListaUsers", null, FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            @*
                <th>
                    @Html.DisplayNameFor(model => model.task.Finished)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpiryDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    <a class="btn btn-primary" onclick="AddMission ('@item.TaskID')">Add</a>
                </td>
                @*
                    <td>
                        @Html.DisplayFor(modelItem => item.Finished)
                    </td>*@
            </tr>
        }

    </table>
}

    <script type="text/javascript">

    
    function AddTask(TaskID, UserID) {
            //creo l'oggetto associando le variabili
        var DatiTask = {
            TaskID: TaskID,
            UserID: UserID
              
            };
            //chiamata ajax
            $.ajax({
                //imposto il tipo di invio dati (GET O POST)
                type: "POST",
                //Dove devo inviare i dati recuperati dal form?
                url: "@Url.Action("DoInsertJson", "Manager")",
                //Quali dati devo inviare? e che tipo
                data: DatiTask,
                success: function (data) {
                    alert(data.messaggio);
                },
                error: function () {
                    alert("Chiamata fallita, riprova");
                    //sempre meglio impostare una callback in caso di fallimento
                }

            });
        };
        

    </script>

