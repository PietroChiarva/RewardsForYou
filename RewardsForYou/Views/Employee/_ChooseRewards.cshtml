@model RewardsForYou.Models.UserRewardModel


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.rewards.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rewards.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rewards.Points)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rewards.Availability)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.rewards) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Points)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Availability)
        </td>
        <td>
          <a onclick="TakeRewards( '@item.RewardsID', '@Model.UserID')"
               class="btn btn-primary">Take the rewards</a>
        </td>
       
    </tr>
}

</table>
<script>
    function TakeRewards(RewardsID, UserID) {
        var Data = {
            RewardsID: RewardsID,
            UserID: UserID
        };

        $.ajax({
                type: "POST",
                url: "@Url.Action("_PartialTakeReward", "Employee")",
                data: JSON.stringify(Data),
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    alert(data.messaggio);
                },
                error: function () {
                    alert("Error!");
                }

            });
    }
</script>